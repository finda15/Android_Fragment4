<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_maps"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="205dp"
                android:layout_height="205dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/android"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textjudul"
                android:layout_gravity="bottom|center_horizontal"
                android:fontFamily="sans-serif"
                android:gravity="center_horizontal"
                android:text="Junior Mobile Programming 2019"
                android:textStyle="bold"
                android:textSize="35dp"/>

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/darker_gray"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:background="#FFE5E5E5"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:layout_width="10dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Tempat"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:id="@+id/tpcc_map"
                android:layout_weight="2"
                android:paddingLeft="10dp"
                android:text="SMK Telkom Malang"
                android:textColor="?android:attr/colorFocusedHighlight"
                android:textSize="16sp"/>

            <ImageButton
                android:layout_width="10dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:id="@+id/buttonmaps"
                android:background="@drawable/map"
                android:paddingLeft="7dp"
                android:textColor="?android:attr/colorFocusedHighlight"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:layout_width="15dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Tanggal"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/schedule"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:paddingLeft="10dp"
                android:text="18-03-2019"
                android:textColor="?android:attr/colorFocusedHighlight"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Time"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:id="@+id/jam"
                android:layout_weight="2"
                android:paddingLeft="10dp"
                android:text="08:00 - 16.30"
                android:textColor="?android:attr/colorFocusedHighlight"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="#E5E5E5"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textSize="16sp"
                android:text="Agenda"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:id="@+id/android_agenda"
                android:paddingLeft="10dp"
                android:text="Pelatihan Mobile Programming"
                android:textColor="?android:attr/colorFocusedHighlight"
                android:textSize="16sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Persyaratan"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:id="@+id/java_text"
                android:paddingLeft="10dp"
                android:text="Java Programming"
                android:textColor="?android:attr/colorFocusedHighlight"
                android:textSize="16sp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/darker_gray"></View>

    </LinearLayout>

</ScrollView>